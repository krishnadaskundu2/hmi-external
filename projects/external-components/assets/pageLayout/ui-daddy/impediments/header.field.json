    "logout-header-dashboard": [
        {
            "value": "Welcome {0}",
            "baseProperties": {
                "name": "givenName",
                "type": "staticText"
            },
            "dynamicValueAccessor": [
                "givenName"
            ],
            "layoutProperties": {
                "css": {
                    "configuration": {
                        "selectorName": ".header__org",
                        "xs": {
                            "color": "black",
                            "font-size": "15px",
                            "font-weight": "bold"
                        }
                    },
                    "customClassName": "header__org"
                }
            }
        },
        {
            "value": "userId",
            "baseProperties": {
                "name": "userId",
                "type": "hidden"
            },
            "dynamicValueAccessor": [
                "id"
            ],
            "layoutProperties": {}
        },
        {
            "baseProperties": {
                "name": "logout",
                "label": "Log Out",
                "type": "button",
                "id": "logout"
            },
            "layoutProperties": {
                "css": {
                    "configuration": {
                        "selectorName": ".header-common__logout",
                        "xs": {
                            "parent-white-space": "nowrap",
                            "parent-justify-content": "flex-end",
                            "background-color": "#222121",
                            "border-color": "#222121",
                            "margin-top": "9px"
                        }
                    },
                    "customClassName": "header-common__logout",
                    "themeClass": "btn btn-dark"
                }
            },
            "events": [
                {
                    "event": "click",
                    "actions": [
                        {
                            "actionType": "INVOKE_API",
                            "formName": "",
                            "apiConfig": {
                                "name": "signupButtonApi",
                                "url": "https://upms-api.azurewebsites.net/api/v1/EmployeeAccount/Logoff",
                                "method": "POST",
                                "payloadParams": [
                                    {
                                        "paramName": "userId",
                                        "mappedField": "userId",
                                        "mappedValue": "",
                                        "valueFormat": "$SHARED_DATA(id)"
                                    }
                                ],
                                "onSuccess": {
                                    "pageUrl": "/login",
                                    "clearSharedData": [
                                        "name",
                                        "id",
                                        "givenName",
                                        "surname",
                                        "authenticated"
                                    ]
                                }
                            }
                        }
                    ],
                    "debounce": 3000
                }
            ]
        }
    ]
}